<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dapm.g1.final_project.activities.TypeActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select an anamorphosis direction"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textStyle="bold"/>

        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/white"
            android:padding="10sp"
            android:id="@+id/spinner"
            android:background="@drawable/template_spinner_item"
            android:textAlignment="center"
            android:theme="@style/Spinner"
            android:entries="@array/choicesTypeAnamorphosis">
        </android.support.v7.widget.AppCompatSpinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Draw"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutDrawingView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ToggleButton
                        android:id="@+id/validCustom"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ic_lock"
                        android:textColorLink="@android:color/transparent"
                        android:textOff=""
                        android:textOn="" />


                </LinearLayout>

                <Button
                    android:id="@+id/generateAnamorphosis"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Generate"
                    android:backgroundTint="@color/colorValid"
                    android:textColor="@color/white"
                    android:drawableLeft="@drawable/background_radius_valid_button"
                    android:layout_margin="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</FrameLayout>
